{
  "slot": "trisdyna:attachment/slot/sight_emx_aps_zh1",
  // 配件的默认模型，不可为空
  "model": "trisdyna:attachment/sight_emx_aps_zh1_geo",
  // 配件默认模型使用的材质，不可为空
  "texture": "trisdyna:attachment/uv/emx_aps_zh1",
  // 只有 瞄具 配件需要设置这个属性，表示瞄具的放大倍率。
  // 玩家可以在数组设置的几个倍率之间切换
  "zoom": [
	1.5,
	4.0
  ],
  "views": [
    1,
    2
  ],
  "views_fov": [
    70.0,
    40.0
  ],
  "text_show": {
    // 作用的组名，该组的旋转点决定文本的位置和朝向
    "ammo_count_text": {
      // 文本缩放，默认大小对于 BlockBench 里的 1
      "scale": 0.2,
      // 对齐方式：right，center，left
      "align": "left",
      // 阴影
      "shadow": false,
      // 文本颜色
      "color": "#00ffff",
      // 亮度：1-15
      "light": 15,
      // 本地化，且支持PlaceholderAPI 风格的占位符
      // 目前仅支持两个：%player_name% %ammo_count%
      "text": "%ammo_count%"
    },
    "custom_text_ammo":{
      "scale": 0.15,
      "align": "left",
      "shadow": false,
      "color": "#00ffff",
      "light": 15,
      "text": "%player_name%"
    }
  },
  // 如果配件是瞄具，且为筒状放大瞄具，此选项应为true
  "scope": false,
  // 如果配件是瞄具，且为红点或全息瞄具，此选项应为true
  "sight": true,
  // 只有 瞄具 配件需要设置这个属性，表示开镜后，枪身和瞄具渲染的fov。
  // 默认情况下，mc 渲染手部模型的 fov 为 70。
  // 音效，只在装卸配件时自己能听到
  "sounds": {
    "install": "tacz:attachments/scope_general_e",
    "uninstall": "tacz:attachments/scope_general_e"
  },
  "laser": {
    // 默认的镭射颜色 default laser color, 0x = #
    "default_color": "0x53f9e6",
    // 是否允许在改装界面自定义该镭射的颜色 can be customized
    "can_edit": true,
    // 激光的长度（因为是渐变，末端可能实际完全看不见）laser length
    "length": 20
  }
}